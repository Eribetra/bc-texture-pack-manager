{
    "manifest_version":2,
    "name": "Box Critters Texture Pack Selector",
    "version":"0.1",
    "content_scripts": [
        {
            "matches": [
                "https://boxcritters.com/*"
            ],
            "js": ["content.js"]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Texture Pack Selector"
    },
    "permissions": [
        "webRequest", "webRequestBlocking","storage","<all_urls>","tabs"
    ],
    "background": {
        "scripts": ["background.js"]
    }
}